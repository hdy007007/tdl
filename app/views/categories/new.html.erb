<%= render 'shared/content_title', title: 'Create and add new category' %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div> 
    <div class="form-group">
      <%= f.submit(@category.new_record? ? "Add Category" : "Update Category", class: 'btn btn-default') %>
      <%= link_to 'Cancel', root_path, class: 'btn btn-default' %>

    </div>
  <% end %>
</div>