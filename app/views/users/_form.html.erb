<div class="well">
  <%= form_for @user, :html => {class: 'form-horizontal'} do |f| %>

    <%= render 'todos/errors', the_object: @user %>

    <div class="form-group">
      <%= f.label :姓, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :名, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>


    <% if @editable %>
      <div class="form-group">
        <%= f.label :密码, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10"> 
          <%= f.submit(@user.new_record? ? 'Register' : '更新', class: 'btn btn-success btn-small ')  %>
        </div>
      </div>
    <% end %>

  <% end %>
</div>