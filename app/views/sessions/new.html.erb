<%= render 'shared/content_title', title: '登录' %>

<%= form_tag '/login' do %>
  <div class="form-group">
    <%= label_tag :用户名 %>
    <%= text_field_tag :username %>
  </div>
  <div class="form-group">
    <%= label_tag :密码 %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag '登录', class: 'btn btn-default' %>
<% end %>

