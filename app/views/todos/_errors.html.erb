<% if the_object.errors.any? %>
  <div class="alert alert-error">
    <h5>Please fix the following <%= 'error'.pluralize(the_object.errors.count) %></h5>
    <ul>
      <% the_object.errors.full_messages.each do |the_error| %>
        <li><%= the_error %></li>
      <% end %>
    </ul>
  </div>
<% end %>